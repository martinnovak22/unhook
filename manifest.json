{
  "manifest_version": 3,
  "name": "Scroll Unhook",
  "version": "1.0",
  "description": "Automatically redirects you away from Reels (FB/IG) or Shorts (YT).",
  "permissions": ["tabs", "storage", "scripting", "webNavigation"],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://www.facebook.com/*",
    "*://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scroll Unhook"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.instagram.com/*",
        "*://www.facebook.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
